    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["fastmd", "vite", "transform", "sidecar"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastmd/shared": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "vite": ">=4.0.0"
  }
}
