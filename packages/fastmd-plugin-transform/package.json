{
  "name": "@fastmd/plugin-transform",
  "version": "0.1.0",
  "description": "Transform plugin that connects to FastMD sidecar",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./astro-integration": {
      "types": "./dist/astro-integration.d.ts",
      "import": "./dist/astro-integration.js"
    },
    "./transform-pipeline": {
      "types": "./dist/transform-pipeline.d.ts",
      "import": "./dist/transform-pipeline.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "bun test --filter 'astro-integration'"
  },
  "keywords": ["fastmd", "vite", "transform", "sidecar"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastmd/shared": "^0.1.0",
    "gray-matter": "^4.0.3",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/mdast": "^4.0.0",
    "astro": "^5.0.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.0"
  },
  "peerDependencies": {
    "vite": ">=4.0.0",
    "astro": ">=4.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false
}
