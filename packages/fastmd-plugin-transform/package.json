{
  "name": "@fastmd/plugin-transform",
  "version": "0.1.0",
  "description": "Transform plugin that connects to FastMD sidecar",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
